<h1>Edit Summary</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for summaries</p>
     <ul>
       <li>Make it good</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for [@topic, @post, @summary]  do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter summary title" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>