<div class="col-md-8">
 <%= form_for [@post, @post.comments.build], remote: true do |f| %>
   <div class="form-group">
     <%= f.label :body %>
     <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>
</div>

