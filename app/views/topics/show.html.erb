 
<div class="row text-center">
</div>
<div class="row text-center">
  <h1><%= @topic.name %></h1>
</div>
<div class="row text-center">
<% if @topic.image? %>
  <div class="col-md-12 center">
  <%= image_tag(@topic.image.full.url) %> 
  </div>
<% end %>

</div>

 
 <% if policy(@topic).update? %>
   <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-success' %>
 <% end %>
 
 <div class="row">
   <div class="col-md-8">
     <p ><%= @topic.description %></p>
     <% @posts.each do |post| %>
       <div class="media">
        <%= render partial: 'votes/voter', locals: { post: post } %>
         <div class="media-body">
           <small>
           <%= image_tag(post.user.avatar.small.url) if post.user.avatar? %>
           submitted <%= time_ago_in_words(post.created_at) %> ago by
           <%= post.user.name %><br>
           <%= post.comments.count %> Comments
          </small>
           <h4 class="media-heading">
             <%= image_tag(post.image.small.url) if post.image? %>
             <%= link_to (post.markdown_title), [@topic, post]  %>
           </h4>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <% if policy(Post.new).create? %>
       <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
     <% end %>
     <% if policy(@topic).destroy? %>
       <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %> 
     <% end %>
   </div>
 </div>
