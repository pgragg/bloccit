<%= form_for topic do |f| %>
<div class="col-md-8">
   <% if topic.errors.any? %>
     <div class="alert alert-danger">
       <h3>There are <%= pluralize(topic.errors.count, "error") %>.</h3> <!-- errors method checks topic based on validations in topic.rb --> 
       <ul>
         <% topic.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
       <%= form_group_tag(topic.errors[:name]) do %>
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
       <% end %>
       </div>
       <div class="form-group">
         <%= f.label :description %>
         <%= f.text_field :description, class: 'form-control', placeholder: "Enter topic description" %>
       </div>
       <% if topic.image? %>
         <div class="form-group">
           <p>Current image</p>
           <%= image_tag(@topic.image.profile.url)%>
         </div>
       <% end %>
       <div class="form-group">
         <%= f.label :image %>
         <%= f.file_field :image %>
         <%= f.hidden_field :image_cache %>
       </div>
       <div class="form-group">
         <%= f.label :public, class: 'checkbox' do %>
           <%= f.check_box :public %> Public topic
         <% end %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>